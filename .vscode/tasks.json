{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build MCP Server",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-ExecutionPolicy",
				"Bypass",
				"-Command",
				"npm run build"
			],
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"label": "Start MCP Server",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-ExecutionPolicy",
				"Bypass",
				"-Command",
				"npm start"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Build and Start MCP Server",
			"dependsOrder": "sequence",
			"dependsOn": ["Build MCP Server", "Start MCP Server"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}